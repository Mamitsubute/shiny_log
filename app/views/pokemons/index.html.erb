<h1>Pokemons#index</h1>
<p>Find me in app/views/pokemons/index.html.erb</p>
<% @users.each do |user| %>
  <p><%= user.name %></p>
  <% @pokemons.each do |pokemon| %>
    <% if pokemon.gotta_by?(user) %>
      <p><%= pokemon.name %></p>
    <% end %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col s12">
      <table class ="centered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Gotta?</th>
          </tr>
        </thead>
        <form action="#">
          <tbody>
            <% @pokemons.each do |pokemon| %>
              <tr>
                <td><%= pokemon.name %></td>
                <td>
                  <label>
                    <input type="checkbox" class="filled-in" <%= checked="checked" if pokemon.gotta_by?(@users.find(1)) %> />
                    <span></span>
                  </label>
                </td>
              </tr>
            <% end %>
          </tbody>
        </form>
      </table>
    </div>
  </div> 
</div>
